<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sergio.simpleexampleviewanimator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewFlipperActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewFlipperActivity" />
        </activity>
        <activity android:name=".ViewSwitcherActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewSwitcherActivity" />
        </activity>
        <activity android:name=".TextImageSwitcherActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TextImageSwitcherActivity" />
        </activity>
    </application>

</manifest>